{
  "name": "vue3-persian-datetime-picker",
  "version": "2.6.0",
  "description": "A vue3 plugin to select jalali date and time",
  "author": "mohammad talkhabi",
  "scripts": {
    "build": "webpack --progress --hide-modules --mode production",
    "lint": "eslint --fix --ext .js,.vue src",
    "dev": "webpack-dev-server --open --hot"
  },
  "main": "dist/vue-persian-datetime-picker.js",
  "dependencies": {
    "lodash": "^4.17.21",
    "moment-jalaali": "^0.9.2"
  },
  "devDependencies": {
    "@vue/compiler-sfc": "^3.0.0-beta.2",
    "autoprefixer": "^9.6.1",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-3": "^6.24.1",
    "browserslist": "^4.16.3",
    "css-loader": "^3.6.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-vue": "^5.2.2",
    "file-loader": "^6.0.0",
    "highlight.js": "^9.12.0",
    "mini-css-extract-plugin": "^1.3.7",
    "node-sass": "^4.14.1",
    "postcss-loader": "^3.0.0",
    "sass": "^1.22.10",
    "sass-loader": "^7.2.0",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "vue": "^3.0.0-beta.1",
    "vue-cli-plugin-vue-next": "~0.1.4",
    "vue-highlight.js": "^2.2.0",
    "vue-icon": "^2.1.1",
    "vue-loader": "^16.0.0-alpha.3",
    "vue-style-loader": "^4.1.2",
    "vue-router": "^4.0.0-0",
    "vue3-highlightjs": "^1.0.5",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.5",
    "webpack-dev-server": "^3.7.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:vue/recommended",
      "prettier",
      "prettier/vue"
    ],
    "rules": {
      "vue/max-attributes-per-line": [
        "error",
        {
          "singleline": 5,
          "multiline": {
            "max": 1,
            "allowFirstLine": false
          }
        }
      ],
      "vue/html-self-closing": [
        "error",
        {
          "html": {
            "void": "always",
            "normal": "always",
            "component": "always"
          },
          "svg": "always",
          "math": "always"
        }
      ],
      "object-curly-spacing": [
        "error",
        "never"
      ]
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "trailingComma": "none"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "keywords": [
    "vuejs",
    "persian",
    "jalali",
    "datepicker",
    "timepicker",
    "datetime picker",
    "vue datepicker",
    "persian datepicker",
    "jalali datepicker",
    "shamsi datepicker"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/talkhabi/vue-persian-datetime-picker"
  }
}
